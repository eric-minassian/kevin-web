---
interface Props {
  variant?: "primary" | "outline";
  href?: string;
  class?: string;
  type?: "button" | "submit";
}

const { variant = "primary", href, class: className, type = "button" } = Astro.props;
const Tag = href ? "a" : "button";

const baseClasses = "group relative inline-flex items-center justify-center gap-2 px-8 py-4 rounded-full font-semibold text-base transition-all duration-300 cursor-pointer overflow-hidden";
const variantClasses = {
  primary: "gradient-bg text-white hover:-translate-y-1 hover:shadow-xl hover:shadow-primary/40 active:translate-y-0 active:shadow-lg",
  outline: "bg-transparent text-white border-2 border-white/20 hover:border-primary hover:bg-primary/5 hover:-translate-y-1 hover:shadow-xl hover:shadow-primary/20 active:translate-y-0",
};
---

<Tag href={href} type={!href ? type : undefined} class:list={[baseClasses, variantClasses[variant], className]}>
  {variant === "primary" && (
    <span class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-300"></span>
  )}
  <span class="relative z-10 flex items-center gap-2">
    <slot />
  </span>
</Tag>
