---
interface Props {
  variant?: "primary" | "outline" | "ghost";
  size?: "sm" | "md" | "lg";
  href?: string;
  class?: string;
  type?: "button" | "submit";
}

const { variant = "primary", size = "md", href, class: className, type = "button" } = Astro.props;
const Tag = href ? "a" : "button";

const baseClasses = "group relative inline-flex items-center justify-center font-semibold transition-all duration-300 cursor-pointer overflow-hidden";

const sizeClasses = {
  sm: "px-5 py-2.5 text-sm rounded-full gap-1.5",
  md: "px-7 py-3.5 text-base rounded-full gap-2",
  lg: "px-9 py-4 text-base rounded-full gap-2.5",
};

const variantClasses = {
  primary: "gradient-bg-animated text-white hover:-translate-y-1 hover:shadow-2xl hover:shadow-primary/50 active:translate-y-0 active:shadow-lg",
  outline: "bg-transparent text-white border border-white/20 backdrop-blur-sm hover:border-primary/60 hover:bg-primary/[0.08] hover:-translate-y-1 hover:shadow-xl hover:shadow-primary/20 active:translate-y-0",
  ghost: "bg-white/5 text-white hover:bg-white/10 hover:-translate-y-0.5",
};
---

<Tag href={href} type={!href ? type : undefined} class:list={[baseClasses, sizeClasses[size], variantClasses[variant], className]}>
  {variant === "primary" && (
    <>
      <!-- Shimmer effect on hover -->
      <span class="absolute inset-0 bg-gradient-to-r from-transparent via-white/25 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700"></span>
      <!-- Glow pulse -->
      <span class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300" style="box-shadow: inset 0 1px 1px rgba(255,255,255,0.3);"></span>
    </>
  )}
  {variant === "outline" && (
    <span class="absolute inset-0 bg-gradient-to-r from-primary/10 to-accent/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
  )}
  <span class="relative z-10 flex items-center gap-2">
    <slot />
  </span>
</Tag>
