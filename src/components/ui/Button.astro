---
interface Props {
  variant?: "primary" | "outline" | "ghost";
  size?: "sm" | "md" | "lg";
  href?: string;
  class?: string;
  type?: "button" | "submit";
}

const { variant = "primary", size = "md", href, class: className, type = "button" } = Astro.props;
const Tag = href ? "a" : "button";

const baseClasses = "inline-flex items-center justify-center font-medium transition-all duration-200 cursor-pointer";

const sizeClasses = {
  sm: "px-4 py-2 text-sm rounded-lg gap-1.5",
  md: "px-5 py-2.5 text-sm rounded-lg gap-2",
  lg: "px-6 py-3 text-base rounded-lg gap-2",
};

const variantClasses = {
  primary: "gradient-bg text-white hover:opacity-90",
  outline: "bg-transparent text-white border border-white/20 hover:border-primary/50 hover:bg-primary/5",
  ghost: "bg-white/5 text-white hover:bg-white/10",
};
---

<Tag href={href} type={!href ? type : undefined} class:list={[baseClasses, sizeClasses[size], variantClasses[variant], className]}>
  <slot />
</Tag>
