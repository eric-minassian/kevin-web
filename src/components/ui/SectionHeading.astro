---
interface Props {
  label?: string;
  title: string;
  description?: string;
  centered?: boolean;
}

const { label, title, description, centered = true } = Astro.props;
---

<header class:list={["mb-16 md:mb-20 animate-on-scroll", { "text-center": centered }]}>
  {label && (
    <div class="inline-flex items-center gap-3 mb-6">
      <span class="w-12 h-px bg-gradient-to-r from-transparent to-primary"></span>
      <span class="text-xs font-semibold text-primary uppercase tracking-[0.2em]">{label}</span>
      <span class="w-12 h-px bg-gradient-to-l from-transparent to-primary"></span>
    </div>
  )}
  <h2 class="text-4xl sm:text-5xl md:text-6xl font-bold leading-[1.1] tracking-display">
    <span class="gradient-text">{title}</span>
  </h2>
  {description && (
    <p class="text-lg md:text-xl text-gray-400 mt-6 max-w-2xl mx-auto leading-relaxed font-light">{description}</p>
  )}
</header>
