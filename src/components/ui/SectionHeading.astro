---
interface Props {
  label?: string;
  title: string;
  description?: string;
  centered?: boolean;
}

const { label, title, description, centered = true } = Astro.props;
---

<header class:list={["mb-12 animate-on-scroll", { "text-center": centered }]}>
  {label && (
    <span class="inline-block text-xs font-semibold text-primary uppercase tracking-widest mb-3">{label}</span>
  )}
  <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
    {title}
  </h2>
  {description && (
    <p class="text-gray-400 max-w-xl mx-auto">{description}</p>
  )}
</header>
