---
interface Props {
  label?: string;
  title: string;
  description?: string;
  centered?: boolean;
}

const { label, title, description, centered = true } = Astro.props;
---

<header class:list={["mb-12 md:mb-16", { "text-center": centered }]}>
  {label && (
    <span class="inline-flex items-center gap-2 text-sm font-semibold text-primary uppercase tracking-widest mb-4">
      <span class="w-8 h-px bg-primary"></span>
      {label}
      <span class="w-8 h-px bg-primary"></span>
    </span>
  )}
  <h2 class="text-4xl md:text-5xl font-bold leading-tight text-white">{title}</h2>
  {description && (
    <p class="text-lg text-gray-400 mt-4 max-w-2xl mx-auto">{description}</p>
  )}
</header>
