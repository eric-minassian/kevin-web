---
interface Props {
  label?: string;
  title: string;
  description?: string;
  centered?: boolean;
}

const { label, title, description, centered = true } = Astro.props;
---

<header class:list={["mb-16 animate-on-scroll", { "text-center": centered }]}>
  {label && (
    <div class="inline-flex items-center gap-3 mb-6">
      <span class="w-8 h-px bg-gradient-to-r from-primary to-transparent"></span>
      <span class="text-xs font-semibold text-primary uppercase tracking-[0.2em]">{label}</span>
      <span class="w-8 h-px bg-gradient-to-l from-primary to-transparent"></span>
    </div>
  )}
  <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6 leading-[1.1]">
    {title}
  </h2>
  {description && (
    <p class:list={["text-lg text-gray-400 leading-relaxed", { "max-w-2xl mx-auto": centered }]}>{description}</p>
  )}
</header>
