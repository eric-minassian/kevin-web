---
interface Props {
  label?: string;
  title: string;
  centered?: boolean;
}

const { label, title, centered = true } = Astro.props;
---

<header class:list={["mb-12", { "text-center": centered }]}>
  {label && (
    <span class="inline-block text-sm font-semibold text-primary uppercase tracking-widest mb-4">
      {label}
    </span>
  )}
  <h2 class="text-4xl md:text-5xl font-bold leading-tight text-white">{title}</h2>
</header>
