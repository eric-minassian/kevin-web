---
interface Props {
  icon: string;
  title: string;
  description: string;
  index?: number;
}

const { icon, title, description, index = 0 } = Astro.props;
---

<article class={`group animate-on-scroll stagger-${(index % 3) + 1}`}>
  <div class="h-full p-6 rounded-xl bg-dark-card border border-white/[0.06] transition-all duration-300 hover:border-primary/30 hover:bg-dark-card-hover">
    <!-- Icon -->
    <div class="w-12 h-12 mb-5 rounded-lg gradient-bg flex items-center justify-center text-white">
      <Fragment set:html={icon} />
    </div>

    <!-- Title -->
    <h3 class="text-lg font-semibold mb-3 text-white">{title}</h3>

    <!-- Description -->
    <p class="text-sm text-gray-400 leading-relaxed">{description}</p>
  </div>
</article>
