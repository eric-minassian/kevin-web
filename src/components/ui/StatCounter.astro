---
interface Props {
  value: number;
  suffix?: string;
  label: string;
}

const { value, suffix = "", label } = Astro.props;
---

<div class="text-center animate-on-scroll" data-counter data-target={value}>
  <span class="block text-5xl md:text-6xl font-bold gradient-text leading-tight">
    <span data-counter-value>0</span>{suffix}
  </span>
  <span class="block text-lg text-gray-400 mt-2">{label}</span>
</div>
