---
interface Props {
  value: number;
  suffix?: string;
  label: string;
  index?: number;
}

const { value, suffix = "", label, index = 0 } = Astro.props;
---

<div class={`text-center animate-on-scroll stagger-${(index % 4) + 1} group`} data-counter data-target={value}>
  <span class="block text-5xl md:text-6xl lg:text-7xl font-display font-bold text-white mb-3 stat-glow transition-all duration-300 group-hover:scale-105">
    <span data-counter-value>0</span><span class="gradient-text-static">{suffix}</span>
  </span>
  <span class="text-sm text-gray-400 uppercase tracking-wider">{label}</span>
</div>
