---
interface Props {
  value: number;
  suffix?: string;
  label: string;
  index?: number;
}

const { value, suffix = "", label, index = 0 } = Astro.props;
---

<div class={`text-center animate-on-scroll stagger-${(index % 4) + 1}`} data-counter data-target={value}>
  <span class="block text-4xl md:text-5xl font-bold text-white mb-2">
    <span data-counter-value>0</span><span class="text-primary">{suffix}</span>
  </span>
  <span class="text-sm text-gray-500">{label}</span>
</div>
