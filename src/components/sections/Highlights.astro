---
import StatCounter from "../ui/StatCounter.astro";
import { siteConfig } from "../../data/site-config";
---

<section class="py-24 lg:py-32 relative overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0 bg-gradient-to-b from-dark via-surface/30 to-dark"></div>
  <div class="section-divider absolute top-0 left-0 right-0"></div>
  <div class="section-divider absolute bottom-0 left-0 right-0"></div>

  <!-- Ambient glow -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[400px] bg-primary/5 rounded-full blur-3xl"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Stats grid -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12 mb-16">
      {siteConfig.highlights.map((stat, index) => (
        <StatCounter value={stat.value} suffix={stat.suffix} label={stat.label} index={index} />
      ))}
      <StatCounter value={50} suffix="+" label="Happy Clients" index={2} />
      <StatCounter value={24} suffix="/7" label="Support Available" index={3} />
    </div>

    <!-- Features -->
    <div class="flex flex-wrap justify-center gap-4">
      {siteConfig.features.map((feature, index) => (
        <div class={`group flex items-center gap-3 px-5 py-3 rounded-full glass-card text-sm text-gray-300 animate-on-scroll stagger-${(index % 4) + 1} hover:border-primary/30 transition-all duration-300`}>
          <div class="w-5 h-5 rounded-full gradient-bg flex items-center justify-center">
            <svg class="w-3 h-3 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
          </div>
          <span class="group-hover:text-white transition-colors">{feature}</span>
        </div>
      ))}
    </div>
  </div>
</section>
