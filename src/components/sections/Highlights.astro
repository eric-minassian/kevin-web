---
import StatCounter from "../ui/StatCounter.astro";
import { siteConfig } from "../../data/site-config";
---

<section class="py-20 relative">
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-surface/50 to-transparent"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Stats grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
      {siteConfig.highlights.map((stat, index) => (
        <StatCounter value={stat.value} suffix={stat.suffix} label={stat.label} index={index} />
      ))}
      <StatCounter value={50} suffix="+" label="Happy Clients" index={2} />
      <StatCounter value={24} suffix="/7" label="Support Available" index={3} />
    </div>

    <!-- Features -->
    <div class="flex flex-wrap justify-center gap-3">
      {siteConfig.features.map((feature, index) => (
        <div class={`flex items-center gap-2 px-4 py-2 rounded-full bg-dark-card border border-white/[0.06] text-sm text-gray-400 animate-on-scroll stagger-${(index % 4) + 1}`}>
          <svg class="w-4 h-4 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          <span>{feature}</span>
        </div>
      ))}
    </div>
  </div>
</section>
