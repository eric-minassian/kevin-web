---
import StatCounter from "../ui/StatCounter.astro";
import { siteConfig } from "../../data/site-config";
---

<section class="py-24 md:py-32 relative overflow-hidden">
  <!-- Cinematic gradient background -->
  <div class="absolute inset-0 bg-gradient-to-b from-dark via-surface to-dark"></div>

  <!-- Animated gradient orbs -->
  <div class="absolute inset-0">
    <div class="absolute top-1/2 left-1/4 w-[500px] h-[500px] bg-[radial-gradient(circle,rgba(31,182,255,0.1)_0%,transparent_50%)] -translate-y-1/2 animate-pulse"></div>
    <div class="absolute top-1/2 right-1/4 w-[400px] h-[400px] bg-[radial-gradient(circle,rgba(255,154,60,0.08)_0%,transparent_50%)] -translate-y-1/2 animate-pulse" style="animation-delay: 1s;"></div>
  </div>

  <!-- Decorative lines -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-primary/20 to-transparent"></div>
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-accent/20 to-transparent"></div>

  <!-- Cross-hair decorations -->
  <div class="absolute top-1/4 left-8 w-px h-16 bg-gradient-to-b from-transparent via-primary/30 to-transparent hidden lg:block"></div>
  <div class="absolute top-1/4 left-8 w-16 h-px bg-gradient-to-r from-transparent via-primary/30 to-transparent hidden lg:block translate-y-8"></div>
  <div class="absolute bottom-1/4 right-8 w-px h-16 bg-gradient-to-b from-transparent via-accent/30 to-transparent hidden lg:block"></div>
  <div class="absolute bottom-1/4 right-8 w-16 h-px bg-gradient-to-l from-transparent via-accent/30 to-transparent hidden lg:block -translate-y-8"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col gap-16 relative z-10">
    <!-- Stats grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-12 lg:gap-16">
      {siteConfig.highlights.map((stat, index) => (
        <StatCounter value={stat.value} suffix={stat.suffix} label={stat.label} index={index} />
      ))}
      <!-- Additional stats -->
      <StatCounter value={50} suffix="+" label="Happy Clients" index={2} />
      <StatCounter value={24} suffix="/7" label="Support Available" index={3} />
    </div>

    <!-- Features marquee -->
    <div class="relative animate-on-scroll">
      <!-- Fade edges -->
      <div class="absolute left-0 top-0 bottom-0 w-24 bg-gradient-to-r from-dark to-transparent z-10 pointer-events-none"></div>
      <div class="absolute right-0 top-0 bottom-0 w-24 bg-gradient-to-l from-dark to-transparent z-10 pointer-events-none"></div>

      <div class="flex flex-wrap justify-center gap-4">
        {siteConfig.features.map((feature, index) => (
          <div class={`group flex items-center gap-3 bg-dark-card/60 backdrop-blur-sm px-6 py-3.5 rounded-full border border-white/[0.06] text-sm text-gray-400 hover:border-primary/30 hover:bg-primary/[0.05] hover:text-white transition-all duration-300 animate-on-scroll stagger-${(index % 4) + 1}`}>
            <div class="w-5 h-5 rounded-full bg-gradient-to-br from-primary/30 to-accent/20 flex items-center justify-center group-hover:from-primary/50 group-hover:to-accent/40 transition-all duration-300">
              <svg class="w-3 h-3 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </div>
            <span class="font-medium">{feature}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
