---
import SectionHeading from "../ui/SectionHeading.astro";
import VideoPlayer from "../ui/VideoPlayer.astro";
import PlayIcon from "../ui/icons/PlayIcon.astro";
import QuoteIcon from "../ui/icons/QuoteIcon.astro";
import { testimonials } from "../../data/testimonials";
---

<section id="testimonials" class="py-24 md:py-32 relative overflow-hidden">
  <!-- Background atmosphere -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[1000px] h-[1000px] bg-[radial-gradient(circle,rgba(31,182,255,0.04)_0%,transparent_50%)] pointer-events-none"></div>
  </div>

  <!-- Decorative quote marks -->
  <div class="absolute top-32 left-8 text-primary/[0.03] hidden lg:block">
    <QuoteIcon size={180} />
  </div>
  <div class="absolute bottom-32 right-8 text-accent/[0.03] rotate-180 hidden lg:block">
    <QuoteIcon size={120} />
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <SectionHeading
      label="Testimonials"
      title="What Clients Say"
      description="Hear from creators and businesses who transformed their content with us"
    />

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
      {testimonials.map((testimonial, index) => (
        <div class={`group animate-on-scroll stagger-${index + 1}`}>
          <div class="relative rounded-2xl overflow-hidden bg-dark-card border border-white/[0.04] transition-all duration-500 hover:border-primary/30 hover:shadow-2xl hover:shadow-primary/10 hover:-translate-y-2">
            <!-- Video -->
            <div class="relative">
              <VideoPlayer driveId={testimonial.driveId} title="Client Testimonial" />
              <!-- Play indicator overlay -->
              <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none">
                <div class="w-16 h-16 rounded-full bg-primary/20 backdrop-blur-sm flex items-center justify-center">
                  <PlayIcon size={24} class="text-white ml-1" />
                </div>
              </div>
            </div>

            <!-- Client info -->
            <div class="p-5 flex items-center gap-4">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary to-accent flex items-center justify-center text-white font-bold shadow-lg shadow-primary/20">
                {String.fromCharCode(65 + index)}
              </div>
              <div>
                <span class="block text-base font-semibold text-white">Happy Client</span>
                <span class="block text-sm text-gray-500">Video Testimonial</span>
              </div>
              <!-- Quote icon -->
              <div class="ml-auto opacity-30 group-hover:opacity-60 transition-opacity">
                <QuoteIcon size={24} class="text-primary" />
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Trust badge -->
    <div class="mt-16 text-center animate-on-scroll">
      <div class="inline-flex items-center gap-4 px-6 py-3 rounded-full bg-dark-card/60 border border-white/[0.06] backdrop-blur-sm">
        <div class="flex -space-x-2">
          {[...Array(4)].map((_, i) => (
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-primary to-accent flex items-center justify-center text-[10px] font-bold ring-2 ring-dark text-white">
              {String.fromCharCode(75 + i)}
            </div>
          ))}
        </div>
        <span class="text-sm text-gray-400">
          Join <span class="text-white font-semibold">100+</span> satisfied clients
        </span>
      </div>
    </div>
  </div>
</section>
