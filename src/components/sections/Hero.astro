---
import Button from "../ui/Button.astro";
import VideoPlayer from "../ui/VideoPlayer.astro";
import { siteConfig } from "../../data/site-config";
---

<section id="hero" class="min-h-screen flex items-center pt-24 pb-20 relative overflow-hidden">
  <!-- Cinematic mesh gradient background -->
  <div class="absolute inset-0 mesh-gradient opacity-60"></div>

  <!-- Dramatic orbital glow -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[140%] aspect-square">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(31,182,255,0.08)_0%,transparent_50%)] animate-pulse"></div>
    <div class="absolute inset-[10%] bg-[radial-gradient(ellipse_at_center,rgba(255,154,60,0.05)_0%,transparent_50%)] animate-pulse" style="animation-delay: 1s;"></div>
  </div>

  <!-- Animated grid pattern -->
  <div class="absolute inset-0 bg-[linear-gradient(rgba(31,182,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(31,182,255,0.02)_1px,transparent_1px)] bg-[size:80px_80px] [mask-image:radial-gradient(ellipse_at_center,black_30%,transparent_70%)]"></div>

  <!-- Floating cinematic elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Film strip accent -->
    <div class="absolute top-[15%] -right-12 w-24 h-48 border-2 border-primary/10 rounded-lg rotate-12 animate-float hidden xl:block">
      <div class="absolute top-2 left-2 right-2 h-3 bg-primary/5 rounded"></div>
      <div class="absolute top-7 left-2 right-2 h-3 bg-primary/5 rounded"></div>
      <div class="absolute top-12 left-2 right-2 h-3 bg-primary/5 rounded"></div>
    </div>

    <!-- Geometric accents -->
    <div class="absolute top-1/4 right-[12%] w-40 h-40 border border-primary/10 rounded-full animate-float opacity-40 hidden lg:block"></div>
    <div class="absolute bottom-1/3 left-[8%] w-24 h-24 border border-accent/10 rotate-45 animate-float-delayed opacity-30 hidden lg:block"></div>

    <!-- Glowing orbs -->
    <div class="absolute top-[20%] left-[15%] w-3 h-3 bg-primary rounded-full animate-float glow-primary opacity-60 hidden md:block"></div>
    <div class="absolute bottom-[25%] right-[20%] w-2 h-2 bg-accent rounded-full animate-float-delayed glow-accent opacity-50 hidden md:block"></div>
    <div class="absolute top-[60%] left-[25%] w-1.5 h-1.5 bg-primary-light rounded-full animate-float opacity-40 hidden lg:block"></div>

    <!-- Decorative lines -->
    <div class="absolute top-1/3 left-0 w-32 h-px bg-gradient-to-r from-transparent via-primary/30 to-transparent animate-pulse hidden lg:block"></div>
    <div class="absolute bottom-1/4 right-0 w-24 h-px bg-gradient-to-l from-transparent via-accent/30 to-transparent animate-pulse hidden lg:block" style="animation-delay: 1.5s;"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 grid grid-cols-1 lg:grid-cols-[1fr_1.3fr] gap-16 lg:gap-20 items-center relative z-10">
    <div class="text-center lg:text-left">
      <!-- Animated badge -->
      <div class="inline-flex items-center gap-3 px-5 py-2.5 rounded-full bg-primary/[0.08] border border-primary/20 mb-8 animate-on-scroll backdrop-blur-sm">
        <span class="relative flex h-2.5 w-2.5">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-primary"></span>
        </span>
        <span class="text-sm text-primary font-medium tracking-wide">Premium Motion Graphics Studio</span>
      </div>

      <!-- Main headline with dramatic typography -->
      <h1 class="text-5xl sm:text-6xl lg:text-7xl xl:text-8xl font-extrabold leading-[0.9] tracking-display mb-8 animate-on-scroll stagger-1">
        <span class="block text-white">Bringing</span>
        <span class="block text-white">Visuals to</span>
        <span class="block mt-2">
          <span class="gradient-text-animated text-glow">Life</span>
        </span>
      </h1>

      <!-- Tagline with accent -->
      <p class="text-xl sm:text-2xl text-gray-400 mb-10 max-w-lg mx-auto lg:mx-0 animate-on-scroll stagger-2 leading-relaxed font-light">
        Premium motion graphics and video editing that
        <span class="text-white font-medium">elevates your brand</span>
      </p>

      <!-- CTA buttons -->
      <div class="flex flex-wrap gap-4 justify-center lg:justify-start animate-on-scroll stagger-3">
        <Button href="#contact" size="lg">
          Start Your Project
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2 group-hover:translate-x-1 transition-transform">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </Button>
        <Button href="#works" variant="outline" size="lg">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" class="mr-2">
            <polygon points="5 3 19 12 5 21 5 3"></polygon>
          </svg>
          View Works
        </Button>
      </div>

      <!-- Trust indicators with avatars -->
      <div class="flex items-center gap-6 mt-12 justify-center lg:justify-start animate-on-scroll stagger-4">
        <div class="flex items-center gap-3">
          <div class="flex -space-x-3">
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary to-primary-dark flex items-center justify-center text-xs font-bold ring-2 ring-dark">K</div>
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-accent to-accent-light flex items-center justify-center text-xs font-bold ring-2 ring-dark">M</div>
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary-light to-primary flex items-center justify-center text-xs font-bold ring-2 ring-dark">J</div>
          </div>
          <div class="text-sm">
            <span class="text-white font-semibold">100+</span>
            <span class="text-gray-500 ml-1">happy creators</span>
          </div>
        </div>
        <div class="hidden sm:block w-px h-8 bg-white/10"></div>
        <div class="hidden sm:flex items-center gap-2 text-sm">
          <div class="flex gap-0.5">
            {[...Array(5)].map(() => (
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor" class="text-accent">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
              </svg>
            ))}
          </div>
          <span class="text-gray-400">5.0 rating</span>
        </div>
      </div>
    </div>

    <!-- Video showcase with cinematic framing -->
    <div class="relative animate-on-scroll stagger-2">
      <!-- Outer glow ring -->
      <div class="absolute -inset-8 rounded-3xl bg-gradient-to-br from-primary/20 via-transparent to-accent/20 blur-3xl opacity-60"></div>

      <!-- Video container with frame -->
      <div class="relative">
        <!-- Corner accents -->
        <div class="absolute -top-3 -left-3 w-8 h-8 border-l-2 border-t-2 border-primary/50 rounded-tl-lg"></div>
        <div class="absolute -top-3 -right-3 w-8 h-8 border-r-2 border-t-2 border-primary/50 rounded-tr-lg"></div>
        <div class="absolute -bottom-3 -left-3 w-8 h-8 border-l-2 border-b-2 border-accent/50 rounded-bl-lg"></div>
        <div class="absolute -bottom-3 -right-3 w-8 h-8 border-r-2 border-b-2 border-accent/50 rounded-br-lg"></div>

        <!-- Video with gradient border effect -->
        <div class="relative rounded-2xl overflow-hidden gradient-border p-[1px]">
          <div class="rounded-2xl overflow-hidden bg-dark">
            <VideoPlayer driveId={siteConfig.showreelId} title="Motion Glyph Showreel" />
          </div>
        </div>

        <!-- REC indicator -->
        <div class="absolute top-4 left-4 flex items-center gap-2 px-3 py-1.5 bg-black/60 backdrop-blur-sm rounded-full z-10">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-500 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-red-500"></span>
          </span>
          <span class="text-xs font-medium text-white/80 tracking-wider">SHOWREEL</span>
        </div>
      </div>

      <!-- Video caption -->
      <div class="flex items-center justify-center gap-4 mt-6 text-sm text-gray-500">
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
            <polygon points="5 3 19 12 5 21 5 3"></polygon>
          </svg>
          <span>Watch our latest work</span>
        </div>
        <span class="w-1 h-1 bg-gray-600 rounded-full"></span>
        <span class="text-gray-600">2:30</span>
      </div>
    </div>
  </div>

  <!-- Scroll indicator with animation -->
  <div class="absolute bottom-10 left-1/2 -translate-x-1/2 flex-col items-center gap-3 hidden md:flex animate-on-scroll stagger-5">
    <span class="text-xs text-gray-500 tracking-widest uppercase">Scroll</span>
    <div class="w-6 h-10 rounded-full border border-white/20 flex justify-center p-2">
      <div class="w-1 h-2.5 bg-primary rounded-full animate-scroll-pulse"></div>
    </div>
  </div>

  <!-- Bottom gradient fade -->
  <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-dark to-transparent pointer-events-none"></div>
</section>
