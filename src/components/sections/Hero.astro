---
import Button from "../ui/Button.astro";
import VideoPlayer from "../ui/VideoPlayer.astro";
import { siteConfig } from "../../data/site-config";
---

<section id="hero" class="min-h-screen flex items-center pt-28 pb-16 relative overflow-hidden">
  <!-- Background gradients -->
  <div class="absolute -top-1/2 -right-1/5 w-4/5 h-4/5 bg-[radial-gradient(circle,rgba(31,182,255,0.1)_0%,transparent_60%)] pointer-events-none"></div>
  <div class="absolute -bottom-1/3 -left-1/5 w-3/5 h-3/5 bg-[radial-gradient(circle,rgba(255,154,60,0.08)_0%,transparent_60%)] pointer-events-none"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 grid grid-cols-1 lg:grid-cols-[1fr_1.2fr] gap-12 lg:gap-16 items-center relative z-10">
    <div class="text-center lg:text-left">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight mb-6 animate-on-scroll">
        Bringing Visuals to Life<br />
        Through <span class="gradient-text">Motion</span>
      </h1>
      <p class="text-lg text-gray-400 mb-8 max-w-xl mx-auto lg:mx-0 animate-on-scroll">
        Premium motion graphics and video editing that elevates your brand.
        From scroll-stopping shorts to cinematic long-form content.
      </p>
      <div class="flex flex-wrap gap-4 justify-center lg:justify-start animate-on-scroll">
        <Button href="#contact">Get Started</Button>
        <Button href="#works" variant="outline">View Works</Button>
      </div>
    </div>

    <div class="relative animate-on-scroll">
      <VideoPlayer driveId={siteConfig.showreelId} title="Motion Glyph Showreel" />
      <p class="text-center mt-4 text-sm text-gray-500">Watch Our Showreel</p>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex-col items-center gap-2 hidden md:flex">
    <div class="w-px h-16 bg-gradient-to-b from-primary to-transparent animate-scroll-pulse"></div>
  </div>
</section>
