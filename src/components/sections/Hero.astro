---
import Button from "../ui/Button.astro";
import VideoPlayer from "../ui/VideoPlayer.astro";
import { siteConfig } from "../../data/site-config";
---

<section id="hero" class="min-h-screen flex items-center pt-28 pb-16 relative overflow-hidden">
  <!-- Animated background gradients -->
  <div class="absolute -top-1/2 -right-1/5 w-4/5 h-4/5 bg-[radial-gradient(circle,rgba(31,182,255,0.12)_0%,transparent_60%)] pointer-events-none animate-float"></div>
  <div class="absolute -bottom-1/3 -left-1/5 w-3/5 h-3/5 bg-[radial-gradient(circle,rgba(255,154,60,0.1)_0%,transparent_60%)] pointer-events-none animate-float-delayed"></div>

  <!-- Floating geometric shapes -->
  <div class="absolute top-1/4 right-[15%] w-32 h-32 border border-primary/20 rounded-full animate-float opacity-30 hidden lg:block"></div>
  <div class="absolute bottom-1/4 left-[10%] w-20 h-20 border border-accent/20 rotate-45 animate-float-delayed opacity-20 hidden lg:block"></div>
  <div class="absolute top-1/3 left-[20%] w-3 h-3 bg-primary rounded-full animate-float opacity-40 hidden md:block"></div>
  <div class="absolute bottom-1/3 right-[25%] w-2 h-2 bg-accent rounded-full animate-float-delayed opacity-50 hidden md:block"></div>

  <!-- Grid pattern overlay -->
  <div class="absolute inset-0 bg-[linear-gradient(rgba(31,182,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(31,182,255,0.03)_1px,transparent_1px)] bg-[size:60px_60px] pointer-events-none"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 grid grid-cols-1 lg:grid-cols-[1fr_1.2fr] gap-12 lg:gap-16 items-center relative z-10">
    <div class="text-center lg:text-left">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 border border-primary/20 mb-6 animate-on-scroll">
        <span class="w-2 h-2 bg-primary rounded-full animate-pulse"></span>
        <span class="text-sm text-primary font-medium">Premium Motion Graphics Studio</span>
      </div>

      <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold leading-[1.1] mb-6 animate-on-scroll stagger-1">
        Bringing Visuals to Life<br />
        Through <span class="gradient-text text-glow">Motion</span>
      </h1>
      <p class="text-lg sm:text-xl text-gray-400 mb-8 max-w-xl mx-auto lg:mx-0 animate-on-scroll stagger-2 leading-relaxed">
        Premium motion graphics and video editing that elevates your brand.
        From scroll-stopping shorts to cinematic long-form content.
      </p>
      <div class="flex flex-wrap gap-4 justify-center lg:justify-start animate-on-scroll stagger-3">
        <Button href="#contact">Get Started</Button>
        <Button href="#works" variant="outline">View Works</Button>
      </div>

      <!-- Trust indicators -->
      <div class="flex items-center gap-6 mt-10 justify-center lg:justify-start animate-on-scroll stagger-4">
        <div class="flex items-center gap-2">
          <div class="flex -space-x-2">
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-primary to-accent flex items-center justify-center text-xs font-bold">K</div>
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-accent to-primary flex items-center justify-center text-xs font-bold">M</div>
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-primary to-accent flex items-center justify-center text-xs font-bold">J</div>
          </div>
          <span class="text-sm text-gray-500">Trusted by 100+ creators</span>
        </div>
      </div>
    </div>

    <div class="relative animate-on-scroll stagger-2">
      <!-- Decorative glow behind video -->
      <div class="absolute -inset-4 bg-gradient-to-r from-primary/20 to-accent/20 rounded-2xl blur-2xl opacity-50"></div>
      <div class="relative">
        <VideoPlayer driveId={siteConfig.showreelId} title="Motion Glyph Showreel" />
      </div>
      <p class="text-center mt-4 text-sm text-gray-500 flex items-center justify-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
          <polygon points="5 3 19 12 5 21 5 3"></polygon>
        </svg>
        Watch Our Showreel
      </p>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex-col items-center gap-2 hidden md:flex">
    <span class="text-xs text-gray-500 mb-2">Scroll to explore</span>
    <div class="w-6 h-10 rounded-full border-2 border-white/20 flex justify-center pt-2">
      <div class="w-1.5 h-3 bg-primary rounded-full animate-scroll-pulse"></div>
    </div>
  </div>
</section>
