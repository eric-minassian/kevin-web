---
import Button from "../ui/Button.astro";
import VideoPlayer from "../ui/VideoPlayer.astro";
import ArrowIcon from "../ui/icons/ArrowIcon.astro";
import PlayIcon from "../ui/icons/PlayIcon.astro";
import { siteConfig } from "../../data/site-config";
---

<section id="hero" class="min-h-screen flex items-center py-20 relative overflow-hidden">
  <!-- Simple gradient background -->
  <div class="absolute inset-0 bg-gradient-to-b from-primary/5 via-transparent to-transparent"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center relative z-10">
    <div class="text-center lg:text-left">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 border border-primary/20 mb-6 animate-on-scroll">
        <span class="w-2 h-2 rounded-full bg-primary animate-pulse"></span>
        <span class="text-sm text-primary font-medium">Motion Graphics Studio</span>
      </div>

      <!-- Main headline -->
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight mb-6 animate-on-scroll stagger-1">
        <span class="text-white">Bringing Visuals</span>
        <br />
        <span class="gradient-text">to Life</span>
      </h1>

      <!-- Tagline -->
      <p class="text-lg text-gray-400 mb-8 max-w-md mx-auto lg:mx-0 animate-on-scroll stagger-2">
        Premium motion graphics and video editing that elevates your brand
      </p>

      <!-- CTA buttons -->
      <div class="flex flex-wrap gap-4 justify-center lg:justify-start animate-on-scroll stagger-3">
        <Button href="#contact" size="lg">
          Start Your Project
          <ArrowIcon size={18} class="ml-1" />
        </Button>
        <Button href="#works" variant="outline" size="lg">
          <PlayIcon size={16} class="mr-1" />
          View Works
        </Button>
      </div>

      <!-- Trust indicators -->
      <div class="flex items-center gap-6 mt-10 justify-center lg:justify-start animate-on-scroll stagger-4">
        <div class="flex items-center gap-3">
          <div class="flex -space-x-2">
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-primary to-primary-dark flex items-center justify-center text-xs font-medium ring-2 ring-dark">K</div>
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-accent to-accent-light flex items-center justify-center text-xs font-medium ring-2 ring-dark">M</div>
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-primary-light to-primary flex items-center justify-center text-xs font-medium ring-2 ring-dark">J</div>
          </div>
          <div class="text-sm">
            <span class="text-white font-semibold">100+</span>
            <span class="text-gray-500 ml-1">happy creators</span>
          </div>
        </div>
        <div class="hidden sm:block w-px h-6 bg-white/10"></div>
        <div class="hidden sm:flex items-center gap-1.5 text-sm">
          <div class="flex gap-0.5">
            {[...Array(5)].map(() => (
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor" class="text-accent">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
              </svg>
            ))}
          </div>
          <span class="text-gray-400">5.0</span>
        </div>
      </div>
    </div>

    <!-- Video showcase -->
    <div class="relative animate-on-scroll stagger-2">
      <div class="relative rounded-2xl overflow-hidden border border-white/10 shadow-2xl shadow-black/50">
        <VideoPlayer driveId={siteConfig.showreelId} title="Motion Glyph Showreel" />
      </div>

      <!-- Simple caption -->
      <div class="flex items-center justify-center gap-3 mt-4 text-sm text-gray-500">
        <PlayIcon size={14} stroke class="text-primary" />
        <span>Watch our showreel</span>
      </div>
    </div>
  </div>
</section>
