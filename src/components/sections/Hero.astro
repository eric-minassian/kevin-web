---
import Button from "../ui/Button.astro";
import VideoPlayer from "../ui/VideoPlayer.astro";
import ArrowIcon from "../ui/icons/ArrowIcon.astro";
import PlayIcon from "../ui/icons/PlayIcon.astro";
import { siteConfig } from "../../data/site-config";
---

<section id="hero" class="min-h-[calc(100vh-80px)] flex items-center pt-24 pb-16 lg:pt-28 lg:pb-20 relative overflow-hidden">
  <!-- Ambient glow effects -->
  <div class="spotlight -top-40 -left-40 opacity-60"></div>
  <div class="spotlight -bottom-40 -right-40 opacity-40" style="background: radial-gradient(circle, rgba(255, 154, 60, 0.12) 0%, transparent 70%);"></div>

  <!-- Subtle grid pattern -->
  <div class="absolute inset-0 opacity-[0.02]" style="background-image: linear-gradient(rgba(255,255,255,.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,.1) 1px, transparent 1px); background-size: 60px 60px;"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-20 items-center relative z-10">
    <div class="text-center lg:text-left">
      <!-- Main headline -->
      <h1 class="text-5xl sm:text-6xl lg:text-7xl xl:text-8xl font-bold leading-[0.95] mb-8 animate-on-scroll stagger-1">
        <span class="block text-white">Bringing</span>
        <span class="block text-white">Visuals</span>
        <span class="block gradient-text">to Life</span>
      </h1>

      <!-- Tagline -->
      <p class="text-lg sm:text-xl text-gray-400 mb-10 max-w-lg mx-auto lg:mx-0 leading-relaxed animate-on-scroll stagger-2">
        Premium motion graphics and video editing that transforms your brand into unforgettable visual experiences
      </p>

      <!-- CTA buttons -->
      <div class="flex flex-wrap gap-4 justify-center lg:justify-start animate-on-scroll stagger-3">
        <Button href="#contact" size="lg" class="btn-magnetic">
          Start Your Project
          <ArrowIcon size={18} class="ml-1 transition-transform group-hover:translate-x-1" />
        </Button>
        <Button href="#works" variant="outline" size="lg" class="group">
          <PlayIcon size={16} class="mr-2 transition-transform group-hover:scale-110" />
          View Works
        </Button>
      </div>

      <!-- Trust indicators -->
      <div class="flex items-center gap-8 mt-12 justify-center lg:justify-start animate-on-scroll stagger-4">
        <div class="flex items-center gap-4">
          <div class="flex -space-x-3">
            <div class="w-10 h-10 rounded-full gradient-bg flex items-center justify-center text-sm font-semibold ring-2 ring-dark">K</div>
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-accent to-accent-light flex items-center justify-center text-sm font-semibold ring-2 ring-dark">M</div>
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary-light to-primary flex items-center justify-center text-sm font-semibold ring-2 ring-dark">J</div>
          </div>
          <div class="text-sm">
            <span class="text-white font-semibold">100+</span>
            <span class="text-gray-500 ml-1">happy creators</span>
          </div>
        </div>
        <div class="hidden sm:block w-px h-8 bg-gradient-to-b from-transparent via-white/20 to-transparent"></div>
        <div class="hidden sm:flex items-center gap-2 text-sm">
          <div class="flex gap-0.5">
            {[...Array(5)].map(() => (
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" class="text-accent drop-shadow-[0_0_6px_rgba(255,154,60,0.5)]">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
              </svg>
            ))}
          </div>
          <span class="text-white font-medium">5.0</span>
        </div>
      </div>
    </div>

    <!-- Video showcase -->
    <div class="relative animate-on-scroll stagger-2">
      <!-- Glow behind video -->
      <div class="absolute -inset-4 bg-gradient-to-r from-primary/20 to-accent/20 rounded-3xl blur-2xl opacity-50"></div>

      <div class="video-frame relative">
        <VideoPlayer driveId={siteConfig.showreelId} title="Motion Glyph Showreel" />
      </div>

      <!-- Floating label -->
      <div class="flex items-center justify-center gap-3 mt-5 text-sm animate-on-scroll stagger-4">
        <div class="w-8 h-8 rounded-full gradient-bg-animated flex items-center justify-center">
          <PlayIcon size={14} stroke class="text-white" />
        </div>
        <span class="text-gray-400">Watch our <span class="text-white font-medium">showreel</span></span>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 animate-on-scroll">
    <span class="text-xs text-gray-500 uppercase tracking-widest">Scroll</span>
    <div class="w-5 h-8 rounded-full border border-white/20 flex items-start justify-center p-1.5">
      <div class="w-1 h-2 rounded-full bg-primary animate-bounce"></div>
    </div>
  </div>
</section>
