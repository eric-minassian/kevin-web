---
import SectionHeading from "../ui/SectionHeading.astro";
import Button from "../ui/Button.astro";
import { siteConfig } from "../../data/site-config";

const { contact } = siteConfig;
---

<section id="contact" class="py-16 md:py-24 relative">
  <!-- Background accent -->
  <div class="absolute bottom-0 right-0 w-1/2 h-1/2 bg-[radial-gradient(circle,rgba(255,154,60,0.05)_0%,transparent_60%)] pointer-events-none"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <SectionHeading
      label="Get In Touch"
      title="Let's Work Together"
      description="Ready to elevate your content? Get in touch and let's create something amazing"
    />

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
      <div class="animate-on-scroll">
        <div class="flex flex-col gap-4">
          <a href={`mailto:${contact.email}`} class="interactive-card flex items-center gap-4 p-5">
            <div class="w-14 h-14 gradient-bg rounded-xl flex items-center justify-center text-white flex-shrink-0 shadow-lg shadow-primary/20">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            </div>
            <div>
              <span class="block text-sm text-gray-500 mb-1">Email</span>
              <span class="block font-semibold text-white">{contact.email}</span>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-auto text-gray-600 group-hover:text-primary transition-colors">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>

          <a href={contact.whatsappLink} target="_blank" rel="noopener noreferrer" class="interactive-card flex items-center gap-4 p-5">
            <div class="w-14 h-14 bg-[#25D366] rounded-xl flex items-center justify-center text-white flex-shrink-0 shadow-lg shadow-[#25D366]/20">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
            </div>
            <div>
              <span class="block text-sm text-gray-500 mb-1">WhatsApp</span>
              <span class="block font-semibold text-white">{contact.whatsapp}</span>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-auto text-gray-600 group-hover:text-primary transition-colors">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>

          <a href={contact.instagram} target="_blank" rel="noopener noreferrer" class="interactive-card flex items-center gap-4 p-5">
            <div class="w-14 h-14 bg-gradient-to-br from-[#f09433] via-[#dc2743] to-[#bc1888] rounded-xl flex items-center justify-center text-white flex-shrink-0 shadow-lg shadow-[#dc2743]/20">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
              </svg>
            </div>
            <div>
              <span class="block text-sm text-gray-500 mb-1">Instagram</span>
              <span class="block font-semibold text-white">@ahmedrafi519</span>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-auto text-gray-600 group-hover:text-primary transition-colors">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>

        <!-- Response time badge -->
        <div class="mt-8 flex items-center gap-3 p-4 bg-primary/5 border border-primary/20 rounded-xl">
          <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
          <span class="text-sm text-gray-400">Usually responds within <span class="text-white font-medium">2 hours</span></span>
        </div>
      </div>

      <form id="contact-form" class="glass-card p-8 animate-on-scroll stagger-2">
        <div class="mb-6">
          <label for="name" class="block text-sm font-medium text-gray-300 mb-2">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="w-full px-4 py-4 bg-dark/50 border border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all"
            placeholder="Your name"
            required
          />
          <p class="hidden mt-2 text-sm text-red-400" id="name-error">Please enter your name</p>
        </div>

        <div class="mb-6">
          <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="w-full px-4 py-4 bg-dark/50 border border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all"
            placeholder="your@email.com"
            required
          />
          <p class="hidden mt-2 text-sm text-red-400" id="email-error">Please enter a valid email</p>
        </div>

        <div class="mb-6">
          <label for="message" class="block text-sm font-medium text-gray-300 mb-2">Message</label>
          <textarea
            id="message"
            name="message"
            rows="4"
            class="w-full px-4 py-4 bg-dark/50 border border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all resize-y min-h-[120px]"
            placeholder="Tell us about your project..."
            required
          ></textarea>
          <p class="hidden mt-2 text-sm text-red-400" id="message-error">Please enter a message</p>
        </div>

        <Button type="submit" class="w-full">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="text-white">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          Send via WhatsApp
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </Button>

        <p class="text-center text-sm text-gray-500 mt-4">
          We'll open WhatsApp with your message pre-filled
        </p>
      </form>
    </div>
  </div>
</section>

<script define:vars={{ whatsappLink: contact.whatsappLink }}>
  const form = document.getElementById("contact-form");
  const nameInput = document.getElementById("name");
  const emailInput = document.getElementById("email");
  const messageInput = document.getElementById("message");

  const validateEmail = (email) => {
    return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
  };

  const showError = (inputId, show) => {
    const input = document.getElementById(inputId);
    const error = document.getElementById(`${inputId}-error`);
    if (show) {
      input?.classList.add("border-red-400");
      error?.classList.remove("hidden");
    } else {
      input?.classList.remove("border-red-400");
      error?.classList.add("hidden");
    }
  };

  // Real-time validation
  nameInput?.addEventListener("blur", () => {
    showError("name", !nameInput.value.trim());
  });

  emailInput?.addEventListener("blur", () => {
    showError("email", !validateEmail(emailInput.value));
  });

  messageInput?.addEventListener("blur", () => {
    showError("message", !messageInput.value.trim());
  });

  form?.addEventListener("submit", (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const name = formData.get("name")?.toString().trim();
    const email = formData.get("email")?.toString().trim();
    const message = formData.get("message")?.toString().trim();

    let hasError = false;

    if (!name) {
      showError("name", true);
      hasError = true;
    }

    if (!validateEmail(email || "")) {
      showError("email", true);
      hasError = true;
    }

    if (!message) {
      showError("message", true);
      hasError = true;
    }

    if (hasError) return;

    const text = encodeURIComponent(
      `Hi, I'm ${name} (${email}).\n\n${message}`
    );

    window.open(`${whatsappLink}?text=${text}`, "_blank");
  });
</script>
