---
import SectionHeading from "../ui/SectionHeading.astro";
import Button from "../ui/Button.astro";
import ArrowIcon from "../ui/icons/ArrowIcon.astro";
import { siteConfig } from "../../data/site-config";

const { contact } = siteConfig;
---

<section id="contact" class="py-20 bg-surface/30">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <SectionHeading
      label="Get In Touch"
      title="Let's Create Together"
      description="Ready to elevate your content? Get in touch and let's bring your vision to life"
    />

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact methods -->
      <div class="space-y-4 animate-on-scroll">
        <a href={`mailto:${contact.email}`} class="flex items-center gap-4 p-5 rounded-xl bg-dark-card border border-white/[0.06] hover:border-primary/30 transition-all">
          <div class="w-12 h-12 rounded-lg gradient-bg flex items-center justify-center text-white">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </div>
          <div class="flex-1">
            <span class="block text-sm text-gray-500">Email</span>
            <span class="block font-medium text-white">{contact.email}</span>
          </div>
          <ArrowIcon size={18} class="text-gray-600" />
        </a>

        <a href={contact.whatsappLink} target="_blank" rel="noopener noreferrer" class="flex items-center gap-4 p-5 rounded-xl bg-dark-card border border-white/[0.06] hover:border-[#25D366]/30 transition-all">
          <div class="w-12 h-12 rounded-lg bg-[#25D366] flex items-center justify-center text-white">
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
          </div>
          <div class="flex-1">
            <span class="block text-sm text-gray-500">WhatsApp</span>
            <span class="block font-medium text-white">{contact.whatsapp}</span>
          </div>
          <ArrowIcon size={18} class="text-gray-600" />
        </a>

        <a href={contact.instagram} target="_blank" rel="noopener noreferrer" class="flex items-center gap-4 p-5 rounded-xl bg-dark-card border border-white/[0.06] hover:border-[#E1306C]/30 transition-all">
          <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-[#f09433] via-[#dc2743] to-[#bc1888] flex items-center justify-center text-white">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </div>
          <div class="flex-1">
            <span class="block text-sm text-gray-500">Instagram</span>
            <span class="block font-medium text-white">@ahmedrafi519</span>
          </div>
          <ArrowIcon size={18} class="text-gray-600" />
        </a>

        <div class="flex items-center gap-3 p-4 bg-primary/5 border border-primary/20 rounded-lg">
          <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
          <span class="text-sm text-gray-400">
            Usually responds within <span class="text-white font-medium">2 hours</span>
          </span>
        </div>
      </div>

      <!-- Contact form -->
      <form id="contact-form" class="animate-on-scroll stagger-2">
        <div class="p-6 rounded-xl bg-dark-card border border-white/[0.06]">
          <h3 class="text-xl font-semibold text-white mb-2">Send us a message</h3>
          <p class="text-sm text-gray-500 mb-6">We'll get back to you within 24 hours</p>

          <div class="space-y-4">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-400 mb-1.5">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                class="w-full px-4 py-3 bg-dark border border-white/[0.08] rounded-lg text-white placeholder-gray-600 focus:outline-none focus:border-primary/50 transition-colors"
                placeholder="Your name"
                required
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-400 mb-1.5">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-3 bg-dark border border-white/[0.08] rounded-lg text-white placeholder-gray-600 focus:outline-none focus:border-primary/50 transition-colors"
                placeholder="your@email.com"
                required
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-400 mb-1.5">Message</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-3 bg-dark border border-white/[0.08] rounded-lg text-white placeholder-gray-600 focus:outline-none focus:border-primary/50 transition-colors resize-none"
                placeholder="Tell us about your project..."
                required
              ></textarea>
            </div>

            <Button type="submit" class="w-full">
              Send via WhatsApp
              <ArrowIcon size={16} />
            </Button>

            <p class="text-center text-xs text-gray-500">
              Your message will be pre-filled in WhatsApp
            </p>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

<script define:vars={{ whatsappLink: contact.whatsappLink }}>
  const form = document.getElementById("contact-form");

  form?.addEventListener("submit", (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const name = formData.get("name")?.toString().trim();
    const email = formData.get("email")?.toString().trim();
    const message = formData.get("message")?.toString().trim();

    if (!name || !email || !message) return;

    const text = encodeURIComponent(
      `Hi, I'm ${name} (${email}).\n\n${message}`
    );

    window.open(`${whatsappLink}?text=${text}`, "_blank");
  });
</script>
