---
import { siteConfig } from "../../data/site-config";
import PlayIcon from "../ui/icons/PlayIcon.astro";

const currentYear = new Date().getFullYear();
const { contact } = siteConfig;
---

<footer class="py-12 border-t border-white/[0.06]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <!-- Brand -->
      <div>
        <a href="#hero" class="inline-flex items-center gap-2 mb-4">
          <div class="w-8 h-8 rounded-lg gradient-bg flex items-center justify-center">
            <PlayIcon size={16} stroke class="text-white" />
          </div>
          <span class="text-lg font-semibold">
            <span class="text-white">Motion</span><span class="text-primary">Glyph</span>
          </span>
        </a>
        <p class="text-sm text-gray-500">{siteConfig.tagline}</p>
      </div>

      <!-- Quick links -->
      <div>
        <h4 class="text-sm font-medium text-white mb-4">Quick Links</h4>
        <nav class="flex flex-col gap-2">
          {[
            { href: "#works", label: "Works" },
            { href: "#services", label: "Services" },
            { href: "#testimonials", label: "Testimonials" },
            { href: "#contact", label: "Contact" },
          ].map((link) => (
            <a href={link.href} class="text-sm text-gray-500 hover:text-white transition-colors">
              {link.label}
            </a>
          ))}
        </nav>
      </div>

      <!-- Connect -->
      <div>
        <h4 class="text-sm font-medium text-white mb-4">Connect</h4>
        <div class="flex gap-3 mb-4">
          <a href={contact.instagram} target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="w-10 h-10 rounded-lg bg-dark-card border border-white/[0.06] flex items-center justify-center text-gray-500 hover:text-white hover:border-white/20 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
          <a href={contact.whatsappLink} target="_blank" rel="noopener noreferrer" aria-label="WhatsApp" class="w-10 h-10 rounded-lg bg-dark-card border border-white/[0.06] flex items-center justify-center text-gray-500 hover:text-white hover:border-white/20 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
          </a>
          <a href={`mailto:${contact.email}`} aria-label="Email" class="w-10 h-10 rounded-lg bg-dark-card border border-white/[0.06] flex items-center justify-center text-gray-500 hover:text-white hover:border-white/20 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </a>
        </div>
        <p class="text-sm text-gray-500">{contact.email}</p>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-white/[0.06] pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-gray-500 text-sm">
        &copy; {currentYear} Motion Glyph. All rights reserved.
      </p>
    </div>
  </div>
</footer>
